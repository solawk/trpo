@model List<TRPO_MVC.Models.ElementModel>
@{
    ViewData["Title"] = "Elements List";
}

<div class="text-center">
    <h1 class="display-4">Elements List</h1>

    @foreach (var el in this.Model)
    {
        <div>@el.ID -- @el.Name: 
            <a asp-area="" asp-controller="Element" asp-action="Read" asp-route-id="@el.ID">Read</a> 
            <a asp-area="" asp-controller="Element" asp-action="Update" asp-route-id="@el.ID">Update</a>
        </div>
    }
</div>
